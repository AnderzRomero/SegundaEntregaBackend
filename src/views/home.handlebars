<h1 class="title">Hero Systems Productos</h1>
<div class="container">

  {{#each listaProductos}}
  <div class="card" id={{this.id}}>
    <div class="card-body">
      <img class="card-img" src={{this.thumbnail}} alt={{this.title}} />
      <h5 class="card-title">{{this.title}}</h5>
      <div class="card-info">
        <p class="card-text">{{this.description}}</p>
        <p class="card-text">Categoría: {{this.category}}</p>
        <p class="card-text">Código: {{this.code}}</p>
        <p class="card-text">Stock: {{this.stock}}</p>
        <p class="card-text">Precio: ${{this.price}}</p>
      </div>
    </div>
  </div>  
  {{/each}}

  {{!-- <button class="btn btn-delete" id="delete-btn" type="button">Registrar Productos</button> --}}
</div>